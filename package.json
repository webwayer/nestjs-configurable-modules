{
  "name": "nestjs-configurable-modules",
  "version": "1.2.0",
  "repository": "git@github.com:webwayer/nestjs-configurable-modules.git",
  "author": "Rodion Balandin <webwayer@gmail.com>",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "description": "Enables the creation of highly configurable modules for your NestJS applications with ease.",
  "keywords": [
    "nestjs",
    "configuration",
    "config",
    "modules",
    "confugurable"
  ],
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "format": "prettier --write **/*.ts */**/*.ts",
    "coverage": "jest --collectCoverage",
    "build": "rm -R build; tsc",
    "prepare": "npm run build",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.8",
    "@types/node": "^18.15.10",
    "rxjs": "^7.8.1"
  },
  "files": [
    "build/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.36.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2"
  }
}
